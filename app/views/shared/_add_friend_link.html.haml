= button_to :request_friendship.l, user_friendships_url(:user_id => current_user.id, :friend_id => user.id), :class => "btn btn-primary btn-xs", :id => "friend_request_#{user.id}", :remote => true
= ajax_spinner_for "friend_request_#{user.id}"
%span  :request_friendship.l, user_friendships_url(:user_id => current_user.id, :friend_id => user.id), :class => "btn btn-primary btn-xs", :id => "friend_request_#{user.id}", :remote => true

- content_for :end_javascript do
  :javascript
    $("#friend_request_#{user.id}").on('click', function() {
      $('#'+ $(this).attr('id') + '_spinner').removeClass('hide');
      $(this).attr("value", "Sending request ...");
    });
     $("#friend_request_#{user.id}").on('swiperight', function() {
      $('#'+ $(this).attr('id') + '_spinner').removeClass('hide');
      $(this).attr("value", "Sending request ...");
    });
