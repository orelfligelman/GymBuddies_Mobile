-widget do
  %h4
    .small= :links.l
  %p
    %a{:href=>user_messages_path(@user)}
      =:inbox.l
      - if @user.unread_messages?
        %span.badge.badge-success
          = "#{@user.unread_message_count}"
          =fa_icon "envelope inverse"
  %p.sent= link_to :sent_messages.l, user_messages_path(@user, :mailbox => :sent)
  %p.compose= link_to :compose.l, new_user_message_path(@user)
