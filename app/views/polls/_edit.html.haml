.form-group
  %label.control-label{:for => 'poll_question'}
    =:question.l
  =text_field_tag 'poll[question]', poll.question, :class => 'text'

.form-group
  %label.control-label
    =:choices.l
  %ol#options
    -poll.choices.each do |choice|
      %li= text_field_tag "choices[]", choice.description, :class => 'text'
